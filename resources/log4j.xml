<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE log4j:configuration PUBLIC "-//APACHE//DTD LOG4J 1.2//EN" "log4j.dtd">
<log4j:configuration xmlns:log4j="http://jakarta.apache.org/log4j/">

	<appender name="debugFileAppender" class="org.apache.log4j.DailyRollingFileAppender">
		<param name="File" value="${catalina.home}/logs/debuglogs/smpp.log" />
		<param name="DatePattern" value=".yyyy-MM-dd-HH" />
		<layout class="org.apache.log4j.PatternLayout">
			<param name="ConversionPattern" value="%d{ISO8601} %-5p [%c:%F:%L] - [%t] - %m%n " />
		</layout>
		<filter class="org.apache.log4j.varia.LevelRangeFilter">
			<param name="LevelMax" value="FATAL" />
			<param name="LevelMin" value="TRACE" />
			<param name="AcceptOnMatch" value="true" />
		</filter>
	</appender>
	
	<!-- Application Loggers -->
	<logger name="com.vuclip">
		<level value="debug" />
	</logger>
	
	
	
	<!-- 3rdparty Loggers -->
	<logger name="org.springframework">
		<level value="error" />
	</logger>
	
	<logger name="org.springframework.core">
		<level value="error" />
	</logger>
	
	<logger name="org.springframework.beans">
		<level value="error" />
	</logger>
	
	<logger name="org.springframework.context">
		<level value="error" />
	</logger>

	<logger name="org.springframework.web">
		<level value="error" />
	</logger>
	
	<logger name="org.jboss">
		<level value="error" />
	</logger>
	<logger name="net.sf.ehcache">
		<level value="error" />
	</logger>
	<logger name="net.bull.javamelody">
		<level value="error" />
	</logger>
	
	<!-- 3rdparty Loggers -->
	<logger name="com.zaxxer.hikari">
		<level value="error" />
	</logger>
	
	<!-- 3rdparty Loggers -->
	<logger name="org.hibernate">
		<level value="error" />
	</logger>

	
	<!-- 3rdparty Loggers -->
	<logger name="org.apache.cxf">
		<level value="error" />
	</logger>

	<!-- Root Logger -->
	<root>
        <priority value="debug" /> <!-- trace -->
        <appender-ref ref="debugFileAppender" />
    </root>
	
</log4j:configuration>